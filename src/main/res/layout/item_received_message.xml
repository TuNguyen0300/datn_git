<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_4sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_person_o"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/show_message"
        app:riv_oval="true"/>
    <TextView
        android:id="@+id/show_message"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_received_message"
        android:padding="10dp"
        android:text="message"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintStart_toEndOf="@id/img_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"/>
    <TextView
        android:id="@+id/texDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/icon_background"
        android:textSize="@dimen/_10sdp"
        android:text="Time"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintStart_toEndOf="@id/img_avatar"
        app:layout_constraintTop_toBottomOf="@id/show_message"/>

</androidx.constraintlayout.widget.ConstraintLayout>